[axon]
# Terminal font
font=Monospace, 11
# Preset colorschemes (/usr/share/axon/colorschemes)
color_scheme=white-on-black
# Window title mode: replace, ignore
title_mode=replace
# Scroll to bottom on output
scroll_on_output=false
# Scroll to bottom when a key is pressed
scroll_on_keystroke=true
# Show the terminal scrollbar
scrollbar=false
# Number of scrollback lines (infinite = -1)
scrollback_lines=1024
# Allow the display of bold text
allow_bold = true
# Enable/Disable terminal beeping
audible_bell=false
# Enable/Disable terminal visible bell
visible_bell=false
# Enable/Disable blinking cursor
blinking_cursor=false
# Style of cursor: block, ibeam, underline
cursor_type=block
# Hide mouse cursor when a key is pressed
autohide_mouse=false
